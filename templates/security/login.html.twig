{% extends 'base.html.twig' %}
{% block link %}
<link rel="stylesheet" href="{{ asset('css/connexion_style.css') }}">
{% endblock %}
{% block title %} Connexion {% endblock %}

{% block main %}
    <main class="mainConnexion">
        <form method="post" class="formConnexion">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Bienvenue, {{ app.user.username }}! <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="titleConnexion">Connectez-vous</h1>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="inputForm" placeholder="Votre email" autocomplete="email" required autofocus>
            <input type="password" name="password" id="inputPassword" class="inputForm" placeholder="Votre mot de passe" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="divBtn">
                <a href="{{ path('contact_page') }}" class="pbConnexion">Probl√®mes de connexion ? </a>
                <button class="btnConnexion" type="submit">
                    Je me connecte
                </button>
            </div>

        </form>
    </main>

{% endblock %}
